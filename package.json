{
  "name": "ginkgo-test-adapter",
  "displayName": "Ginkgo Test Adapter",
  "publisher": "jrussellsmyth",
  "description": "Add Ginkgo tests to the test explorer",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrussellsmyth/ginkgo-test-adapter"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Testing"
  ],
  "extensionDependencies": [
    "golang.go"
  ],
  "activationEvents": [
    "onLanguage:go",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ginkgo-test-adapter.runTest",
        "title": "Ginkgo: Run Test"
      },
      {
        "command": "ginkgo-test-adapter.debugTest",
        "title": "Ginkgo: Debug Test"
      }
    ],
    "configuration": {
      "title": "Ginkgo Test Adapter",
      "properties": {
        "ginkgoTestAdapter.ginkgoPath": {
          "type": "string",
          "default": "ginkgo",
          "description": "Path to the ginkgo executable"
        },
        "ginkgoTestAdapter.environmentVariables": {
          "type": "object",
          "default": {},
          "description": "Environment variables to be set when running/debugging tests via the extension"
        },
        "ginkgoTestAdapter.buildTags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Build tags to be set when running/debugging tests via the extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.11",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
